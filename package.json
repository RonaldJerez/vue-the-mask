{
  "name": "@rj-pkgs/vue-the-mask",
  "version": "0.0.0-development",
  "description": "A lightweight and dependency free mask input created specific for Vue",
  "main": "dist/vue-the-mask.js",
  "scripts": {
    "upgrade:check": "ncu",
    "upgrade:apply": "ncu -a",
    "build": "vue build -t lib -n VueTheMask src/index.js && cp dist/VueTheMask.umd.min.js dist/vue-the-mask.js",
    "docs:build": "cd src/docs && vue build -d ../../docs/",
    "docs:serve": "serve ./docs/",
    "start": "yarn dev",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "dev": "cd src/docs && vue serve",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist/",
    "src/*.js",
    "src/*.vue"
  ],
  "keywords": [
    "vue",
    "mask"
  ],
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  },
  "contributors": [
    "Marcos Neves <marcos.neves@gmail.com> (https://vuejs-tips.github.io/)",
    "Ronald Jerez <dlanor@gmail.com>"
  ],
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "env"
        ]
      },
      "production": {
        "presets": [
          "@vue/app"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 versions",
    "not IE > 0"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-service": "^3.8.4",
    "babel-jest": "^22.4.3",
    "babel-preset-vue-app": "^2.0.0",
    "fsevents": "^2.1.2",
    "jest": "^22.4.3",
    "jest-serializer-vue": "^1.0.0",
    "npm-check-updates": "^2.14.2",
    "npmlog": "4.1.2",
    "semantic-release": "^15.13.16",
    "serve": "^6.5.7",
    "vue": "^2.5.16",
    "vue-jest": "^2.5.0",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RonaldJerez/vue-the-mask.git"
  }
}
